<% if (products.length > 0) { %>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.description %></td>
                    <td><img src="/uploads/<%= product.image %>" width="50" /></td>
                    <% if (user.role === 'admin') { %>
                        <td>
                            <form action="/products/delete/<%= product._id %>" method="POST">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    <% } %>
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p>No products found.</p>
<% } %>
